@font-face {
    font-family: "DFGirl1B";
    src: url("../font/DFGL1B.eot?") format("eot"),  
    url("../font/DFGL1B.woff") format("woff"),
     url("../font/DFGL1B.ttf") format("truetype"),
      url("../font/DFGL1B.svg#DFGirl1B") format("svg");
    font-weight: normal;
    font-style: normal;
}
@import 'nib'
@import '_third-party/normalize.min.css'
// project
@import 'var'
@import '_global'
@import '_highlight/highlight'
@import '_layout/*'

// search
if hexo-config('algolia_search.enable')
  @import '_search/index'
  @import '_search/algolia'

if hexo-config('local_search') && hexo-config('local_search.enable')
  @import '_search/index'
  @import '_search/local-search'
