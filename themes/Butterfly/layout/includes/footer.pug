#footer-wrap
  - var now = new Date()
  - var nowYear = now.getFullYear()
  if theme.since && theme.since != nowYear
    .copyright!= `&copy;${theme.since + ' - '}<i id="heartbeat" class="fa fas fa-heartbeat"></i>${' - '+ nowYear}`
    //- .copyright!= `&copy;${theme.since} - ${nowYear} By ${config.author}`
  else
    .copyright!= `&copy;${nowYear+' '}<i id="heartbeat" class="fa fas fa-heartbeat"></i>`
  if theme.footer_copyright.enable
    .framework-info
      //- span= _p('footer.driven') + ' '
      span=`Power By`
      a(href='https://github.com/by1773')
        //- span 
      span.footer-separator=`${config.author}`
      //- span= _p('footer.theme') + ' '
      //- a(href='https://github.com/jerryc127/hexo-theme-butterfly')
      //-   span Butterfly
  if theme.footer_custom_text_desc
    .footer_custom_text_desc!=`${theme.footer_custom_text_desc}`   
  if theme.ICP.enable
    .icp
      a(href=theme.ICP.url)
        if theme.ICP.icon
          img.icp-icon(src=url_for(theme.ICP.icon))
        span=theme.ICP.text

